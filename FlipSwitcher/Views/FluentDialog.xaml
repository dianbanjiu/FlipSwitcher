<Window x:Class="FlipSwitcher.Views.FluentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Dialog"
    Width="400"
    SizeToContent="Height"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    PreviewKeyDown="Window_PreviewKeyDown">

    <Border Background="{StaticResource BackgroundSolidBaseBrush}"
        BorderBrush="{StaticResource SurfaceStrokeBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                Background="{StaticResource BackgroundSolidSecondaryBrush}"
                CornerRadius="12,12,0,0"
                Padding="20,16"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border x:Name="IconBorder"
                        Grid.Column="0"
                        Width="32" Height="32"
                        CornerRadius="8"
                        Margin="0,0,12,0">
                        <Path x:Name="IconPath"
                            Stretch="Uniform"
                            Width="16" Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>

                    <TextBlock x:Name="TitleText"
                        Grid.Column="1"
                        Style="{StaticResource TitleTextStyle}"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis" />

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                        Click="CloseButton_Click"
                        Style="{StaticResource FluentCloseButtonStyle}" />
                </Grid>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1"
                Padding="20,16">
                <TextBlock x:Name="MessageText"
                    Style="{StaticResource BodyTextStyle}"
                    TextWrapping="Wrap" />
            </Border>

            <!-- Buttons -->
            <Border Grid.Row="2"
                Background="{StaticResource BackgroundSolidSecondaryBrush}"
                CornerRadius="0,0,12,12"
                Padding="20,12">
                <StackPanel x:Name="ButtonPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <!-- Buttons will be added dynamically -->
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
