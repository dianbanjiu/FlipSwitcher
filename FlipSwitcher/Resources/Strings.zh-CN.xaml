<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Chinese Simplified -->

    <!-- Main Window -->
    <system:String x:Key="AppTitle">FlipSwitcher</system:String>
    <system:String x:Key="WindowsCount">个窗口</system:String>
    <system:String x:Key="SearchPlaceholder">搜索窗口...</system:String>
    <system:String x:Key="NoWindowsFound">未找到窗口</system:String>
    <system:String x:Key="TryDifferentSearch">尝试其他搜索词</system:String>
    <system:String x:Key="Minimized">已最小化</system:String>

    <!-- Footer Hints -->
    <system:String x:Key="HintEnter">回车</system:String>
    <system:String x:Key="HintSwitch">切换</system:String>
    <system:String x:Key="HintNav">导航</system:String>
    <system:String x:Key="HintSearch">搜索</system:String>
    <system:String x:Key="HintClose">关闭</system:String>
    <system:String x:Key="HintSettings">设置</system:String>
    <system:String x:Key="HintExit">退出</system:String>

    <!-- Settings Window -->
    <system:String x:Key="Settings">设置</system:String>
    <system:String x:Key="SettingsClose">关闭</system:String>

    <!-- Settings - Language -->
    <system:String x:Key="SettingsLanguage">语言</system:String>
    <system:String x:Key="SettingsLanguageDesc">选择您偏好的语言</system:String>
    <system:String x:Key="LanguageEnglish">English</system:String>
    <system:String x:Key="LanguageChinese">简体中文</system:String>
    <system:String x:Key="LanguageChineseTraditional">繁體中文</system:String>

    <!-- Settings - Hotkey -->
    <system:String x:Key="SettingsHotkey">快捷键</system:String>
    <system:String x:Key="SettingsAltSpace">Alt + Space</system:String>
    <system:String x:Key="SettingsAltSpaceDesc">使用 Alt + Space 激活 FlipSwitcher</system:String>
    <system:String x:Key="SettingsAltTab">Alt + Tab</system:String>
    <system:String x:Key="SettingsAltTabDesc">使用 FlipSwitcher 替换系统 Alt+Tab</system:String>
    <system:String x:Key="SettingsReplacesSystem">替换系统</system:String>
    <system:String x:Key="SettingsActiveHotkey">当前快捷键:</system:String>

    <!-- Settings - Appearance -->
    <system:String x:Key="SettingsAppearance">外观</system:String>
    <system:String x:Key="SettingsTheme">主题</system:String>
    <system:String x:Key="SettingsThemeDesc">选择浅色或深色模式</system:String>
    <system:String x:Key="ThemeDark">深色</system:String>
    <system:String x:Key="ThemeLight">浅色</system:String>
    <system:String x:Key="ThemeSystem">跟随系统</system:String>

    <!-- Settings - Behavior -->
    <system:String x:Key="SettingsBehavior">行为</system:String>
    <system:String x:Key="SettingsRunAsAdmin">以管理员身份运行</system:String>
    <system:String x:Key="SettingsRunAsAdminDesc">切换到提升权限窗口时需要 (需重启)</system:String>
    <system:String x:Key="SettingsAdminEnabled">已启用</system:String>
    <system:String x:Key="SettingsAdminDisabled">未启用</system:String>
    <system:String x:Key="SettingsStartWithWindows">开机自启</system:String>
    <system:String x:Key="SettingsStartWithWindowsDesc">登录时自动启动 FlipSwitcher</system:String>
    <system:String x:Key="SettingsHideOnFocusLost">失去焦点时隐藏</system:String>
    <system:String x:Key="SettingsHideOnFocusLostDesc">点击外部区域时自动隐藏</system:String>
    <system:String x:Key="SettingsPinyinSearch">拼音搜索</system:String>
    <system:String x:Key="SettingsPinyinSearchDesc">使用拼音首字母或全拼搜索窗口</system:String>

    <!-- Settings - Updates -->
    <system:String x:Key="SettingsUpdates">更新</system:String>
    <system:String x:Key="SettingsCheckForUpdatesAuto">自动检查更新</system:String>
    <system:String x:Key="SettingsCheckForUpdatesAutoDesc">应用启动时自动检查更新</system:String>
    <system:String x:Key="SettingsCheckForUpdates">检查更新</system:String>
    <system:String x:Key="SettingsCheckingUpdates">检查中...</system:String>

    <!-- Settings - About -->
    <system:String x:Key="SettingsAbout">关于</system:String>
    <system:String x:Key="SettingsAboutDesc">采用 Fluent 2 设计的现代 Alt-Tab 替代品</system:String>
    <system:String x:Key="SettingsViewOnGitHub">在 GitHub 上查看</system:String>

    <!-- Tray Menu -->
    <system:String x:Key="TrayShow">显示</system:String>
    <system:String x:Key="TraySettings">设置</system:String>
    <system:String x:Key="TrayRestart">重启</system:String>
    <system:String x:Key="TrayExit">退出</system:String>

    <!-- MessageBox -->
    <system:String x:Key="MsgRestartRequired">FlipSwitcher 需要以管理员权限重启。是否立即重启？</system:String>
    <system:String x:Key="MsgRestartRequiredNormal">FlipSwitcher 需要以普通用户权限重启。是否立即重启？</system:String>
    <system:String x:Key="MsgRestartFailed">无法重启应用程序。请手动重启。</system:String>
    <system:String x:Key="MsgRestartFailedTitle">重启失败</system:String>
    <system:String x:Key="MsgRestartRequiredTitle">需要重启</system:String>
    <system:String x:Key="MsgStartupFailed">无法启用开机自启。请尝试以管理员身份运行。</system:String>
    <system:String x:Key="MsgStartupDisabledFailed">无法禁用开机自启。</system:String>
    <system:String x:Key="MsgAtLeastOneHotkey">至少需要启用一个快捷键。</system:String>
    <system:String x:Key="MsgErrorOccurred">发生错误：{0}</system:String>
    <system:String x:Key="MsgErrorTitle">FlipSwitcher 错误</system:String>
    <system:String x:Key="MsgUpdateAvailable">发现新版本 ({0})！是否立即下载？</system:String>
    <system:String x:Key="MsgUpdateAvailableTitle">发现更新</system:String>
    <system:String x:Key="MsgNoUpdateAvailable">您正在使用最新版本。</system:String>
    <system:String x:Key="MsgNoUpdateAvailableTitle">无更新</system:String>
    <system:String x:Key="MsgUpdateCheckFailed">检查更新失败。请检查您的网络连接。</system:String>
    <system:String x:Key="MsgUpdateCheckFailedTitle">更新检查失败</system:String>
    
    <!-- Additional Strings -->
    <system:String x:Key="SettingsWindowTitle">FlipSwitcher 设置</system:String>
    <system:String x:Key="VersionPreview">预览版</system:String>
    <system:String x:Key="VersionFormat">FlipSwitcher v{0}</system:String>
    <system:String x:Key="DefaultFontDisplay">默认 (Segoe UI Variable)</system:String>
    <system:String x:Key="HotkeyNone">无</system:String>
    <system:String x:Key="HotkeySeparator"> / </system:String>
    <system:String x:Key="SettingsThemeRestartHint">重启生效</system:String>
    <system:String x:Key="SettingsFont">字体</system:String>
    <system:String x:Key="SettingsFontDesc">选择应用程序使用的字体</system:String>
    <system:String x:Key="TrayToolTip">FlipSwitcher</system:String>

</ResourceDictionary>